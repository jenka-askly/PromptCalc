{
  // Purpose: Compile Azure Functions TypeScript sources for deployment.
  // Persists: None.
  // Security Risks: None.
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "ES2022",
    // Ensure Node globals/modules are typed for diagnostics/build metadata helpers.
    "types": ["node"],
    "typeRoots": ["./types", "../../node_modules/@types"]
  },
  "include": ["src/**/*.ts"]
}
