# Purpose: Define basic editor formatting rules for consistent edits.
# Persists: None.
# Security Risks: None.

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cs,csproj,fs,fsproj,ts,tsx,js,jsx,json,yml,yaml,md}]
indent_style = space
indent_size = 2

[*.cs]
indent_size = 2
